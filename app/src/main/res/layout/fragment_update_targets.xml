<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="com.flexapp.flex.viewmodels.UpdateTargetsViewModel" />

        <variable
            name="parent"
            type="com.flexapp.flex.interfaces.IUpdateTargetsFragment" />

    </data>

    <RelativeLayout
        android:background="@color/colorBase"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_weight"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:background="@color/colorPrimary"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="16sp"
                    android:id="@+id/text_view_target_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Target Weight"
                    android:layout_centerHorizontal="true" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_view_target_weight"
                    android:layout_centerHorizontal="true">

                    <EditText
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:hint="00"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/text_view_weight_units"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="units" />
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_height"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_below="@+id/card_view_weight"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:background="@color/colorPrimary"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="16sp"
                    android:id="@+id/text_view_target_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Target Height"
                    android:layout_centerHorizontal="true" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_view_target_height"
                    android:layout_centerHorizontal="true">

                    <EditText
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:hint="00"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/text_view_height_units"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="units" />
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_calories"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_below="@+id/card_view_height"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:background="@color/colorPrimary"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="16sp"
                    android:id="@+id/text_view_target_calories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Target Calories"
                    android:layout_centerHorizontal="true" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_view_target_calories"
                    android:layout_centerHorizontal="true">

                    <EditText
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:hint="00"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/text_view_calorie_units"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="units" />
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:text="Save"
            android:layout_below="@+id/card_view_calories"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/colorAccent" />
    </RelativeLayout>
</layout>
